{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@infra/ory": ["./infra/ory/src/index.ts"],
      "@infra/ory/theme": ["./infra/ory/src/theme/default/index.ts"],
      "@infra/ory/client": ["./infra/ory/src/client/index.ts"],
      "@infra/ory/nextjs/app": ["./infra/nextjs/src/app/index.ts"],
      "@infra/ory/nextjs/middleware": ["./infra/nextjs/src/middleware/index.ts"],
      "@infra/ory/nextjs/pages": ["./infra/nextjs/src/pages/index.ts"],
      "@infra/ory/nextjs/utils": ["./infra/nextjs/src/utils/index.ts"],
      "@ui/components": ["./ui/src/components/index.ts"],
      "@/*": ["./*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./infra/ory/src/theme/default/assets/global.d.ts",
  ],
  "exclude": ["node_modules"]
}
