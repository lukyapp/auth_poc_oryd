# |----------------------------------------------------------
# | databases
# |----------------------------------------------------------

# --------- Postgres superuser (bootstrap only) ---------
KRATOS_POSTGRES_USER=ory
KRATOS_POSTGRES_PASS=ory
HYDRA_POSTGRES_USER=ory
HYDRA_POSTGRES_PASS=ory

# |----------------------------------------------------------
# | Kratos config
# |----------------------------------------------------------

# --------- Kratos DB user / DSN ---------
KRATOS_DB=kratos
KRATOS_USER=ory
KRATOS_PASS=ory
KRATOS_DSN=postgres://${KRATOS_USER}:${KRATOS_PASS}@kratos-postgres:5432/${KRATOS_DB}?sslmode=disable&max_conns=20&max_conn_lifetime=5m
# --------- Kratos oauth ---------
KRATOS_OAUTH_GOOGLE_CLIENT_ID=TODO
KRATOS_OAUTH_GOOGLE_CLIENT_SECRET=TODO

# |----------------------------------------------------------
# | Hydra config
# |----------------------------------------------------------

# --------- Hydra DB user / DSN ---------
HYDRA_DB=hydra
HYDRA_USER=ory
HYDRA_PASS=ory
HYDRA_DSN=postgres://${HYDRA_USER}:${HYDRA_PASS}@hydra-postgres:5432/${HYDRA_DB}?sslmode=disable&max_conns=20&max_conn_lifetime=5m
# --------- Hydra secrets (32+ bytes hex recommended) ---------
# Generate with:  openssl rand -hex 32
HYDRA_SECRETS_SYSTEM=8b5e6f3c1f0b4a6c9d1e2f3a4b5c6d7e8f9a0b1c2d3e4f5061728394a5b6c7d
# --------- Kratos jwt sign options ---------
HYDRA_TTL_ACCESS_TOKEN=1h
HYDRA_TTL_REFRESH_TOKEN=720h

# |----------------------------------------------------------
# | Kratos UI config
# |----------------------------------------------------------

# --------- Kratos UI secrets (use long random strings) ---------
KRATOS_UI_COOKIE_SECRET=please_replace_with_random_32_bytes
KRATOS_UI_CSRF_SECRET=please_replace_with_random_32_bytes
