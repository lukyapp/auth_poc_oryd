# |----------------------------------------------------------
# | databases
# |----------------------------------------------------------

# --------- Postgres superuser (bootstrap only) ---------
KRATOS_POSTGRES_USER=ory
KRATOS_POSTGRES_PASS=ory
HYDRA_POSTGRES_USER=ory
HYDRA_POSTGRES_PASS=ory

# |----------------------------------------------------------
# | Kratos config
# |----------------------------------------------------------

# --------- Kratos DB user / DSN ---------
KRATOS_DB=kratos
KRATOS_USER=ory
KRATOS_PASS=ory
KRATOS_DSN=postgres://${KRATOS_USER}:${KRATOS_PASS}@kratos-postgres:5432/${KRATOS_DB}?sslmode=disable&max_conns=20&max_conn_lifetime=5m
# --------- Kratos oauth ---------
KRATOS_OAUTH_GOOGLE_CLIENT_ID=TODO
KRATOS_OAUTH_GOOGLE_CLIENT_SECRET=TODO

# |----------------------------------------------------------
# | Hydra config
# |----------------------------------------------------------

# --------- Hydra DB user / DSN ---------
HYDRA_BASE_URL=http://localhost:4444
HYDRA_DB=hydra
HYDRA_USER=ory
HYDRA_PASS=ory
HYDRA_DSN=postgres://${HYDRA_USER}:${HYDRA_PASS}@hydra-postgres:5432/${HYDRA_DB}?sslmode=disable&max_conns=20&max_conn_lifetime=5m
# --------- Hydra secrets (32+ bytes hex recommended) ---------
# Generate with:  openssl rand -hex 32
HYDRA_SECRETS_SYSTEM=8b5e6f3c1f0b4a6c9d1e2f3a4b5c6d7e8f9a0b1c2d3e4f5061728394a5b6c7d
# --------- Kratos jwt sign options ---------
HYDRA_JWT_ISSUER=${HYDRA_BASE_URL}
HYDRA_TTL_ACCESS_TOKEN=1h
HYDRA_TTL_REFRESH_TOKEN=720h

# |----------------------------------------------------------
# | Kratos UI config
# |----------------------------------------------------------

# --------- Kratos UI secrets (use long random strings) ---------
KRATOS_UI_COOKIE_SECRET=please_replace_with_random_32_bytes
KRATOS_UI_CSRF_SECRET=please_replace_with_random_32_bytes

# |----------------------------------------------------------
# | Authorize ui app config
# |----------------------------------------------------------
# --------- for hydra authorize endpoint : /oauth2/auth ---------
OAUTH_UI_APP_BASE_URL=http://localhost:3000
OAUTH_UI_APP_LOGIN_URL=${OAUTH_UI_APP_BASE_URL}/login
OAUTH_UI_APP_REGISTRATION_URL=${OAUTH_UI_APP_BASE_URL}/registration
OAUTH_UI_APP_CONSENT_URL=${OAUTH_UI_APP_BASE_URL}/consent
OAUTH_UI_APP_LOGOUT_URL=${OAUTH_UI_APP_BASE_URL}/logout
OAUTH_UI_APP_DEVISE_VERIFICATION_URL=${OAUTH_UI_APP_BASE_URL}/device_verification
OAUTH_UI_APP_DEVISE_SUCCESS_URL=${OAUTH_UI_APP_BASE_URL}/device_done
OAUTH_UI_APP_ERROR_URL=${OAUTH_UI_APP_BASE_URL}/error
OAUTH_UI_APP_LOGOUT_SUCCESSFUL_URL=${OAUTH_UI_APP_BASE_URL}/logout-successful
OAUTH_UI_APP_SETTINGS_SUCCESSFUL_URL=${OAUTH_UI_APP_BASE_URL}/settings
OAUTH_UI_APP_RECOVERY_SUCCESSFUL_URL=${OAUTH_UI_APP_BASE_URL}/recovery
